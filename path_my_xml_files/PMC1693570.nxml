 contrib-type="author"><name><surname>Gouma</surname><given-names>Dirk J</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>D.J.Gouma@amc.uva.nl</email></contrib><contrib id="A7" contrib-type="author"><name><surname>van Berge Henegouwen</surname><given-names>Mark I</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>m.i.vanbergehenegouwen@amc.uva.nl</email></contrib><contrib id="A8" contrib-type="author"><name><surname>Fuhring</surname><given-names>Jan Willem</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>J.W.Fuhring@amc.uva.nl</email></contrib><contrib id="A9" contrib-type="author"><name><surname>Dejong</surname><given-names>Cornelis HC</given-names></name><xref ref-type="aff" rid="I4">4</xref><email>C.Dejong@surgery.azm.nl</email></contrib><contrib id="A10" contrib-type="author"><name><surname>van Dam</surname><given-names>Ronald M</given-names></name><xref ref-type="aff" rid="I4">4</xref><email>rvdm@shee.azm.nl</email></contrib><contrib id="A11" contrib-type="author"><name><surname>Cuesta</surname><given-names>Miguel A</given-names></name><xref ref-type="aff" rid="I5">5</xref><email>ma.cuesta@vumc.nl</email></contrib><contrib id="A12" contrib-type="author"><name><surname>Noordhuis</surname><given-names>Astrid</given-names></name><xref ref-type="aff" rid="I5">5</xref><email>A.Noordhuis@vumc.nl</email></contrib><contrib id="A13" contrib-type="author"><name><surname>de Jong</surname><given-names>Dick</given-names></name><xref ref-type="aff" rid="I5">5</xref><email>d.dejong@vumc.nl</email></contrib><contrib id="A14" contrib-type="author"><name><surname>van Zalingen</surname><given-names>Edith</given-names></name><xref ref-type="aff" rid="I6">6</xref><email>Zalingen@vumc.nl</email></contrib><contrib id="A15" contrib-type="author"><name><surname>Engel</surname><given-names>Alexander F</given-names></name><xref ref-type="aff" rid="I7">7</xref><email>Engel.A@zaansmc.nl</email></contrib><contrib id="A16" contrib-type="author"><name><surname>Goei</surname><given-names>T Hauwy</given-names></name><xref ref-type="aff" rid="I7">7</xref><email>goei.t@zaansmc.nl</email></contrib><contrib id="A17" contrib-type="author"><name><surname>de Stoppelaar</surname><given-names>I Erica</given-names></name><xref ref-type="aff" rid="I8">8</xref><email>stoppelaar.e@zaansmc.nl</email></contrib><contrib id="A18" contrib-type="author"><name><surname>van Tets</surname><given-names>Willem F</given-names></name><xref ref-type="aff" rid="I9">9</xref><email>w.vantets@slaz.nl</email></contrib><contrib id="A19" contrib-type="author"><name><surname>van Wagensveld</surname><given-names>Bart A</given-names></name><xref ref-type="aff" rid="I9">9</xref><email>b.vanwagensveld@slaz.nl</email></contrib><contrib id="A20" contrib-type="author"><name><surname>Swart</surname><given-names>Annemiek</given-names></name><xref ref-type="aff" rid="I9">9</xref><email>annemiek.swart@slaz.nl</email></contrib><contrib id="A21" contrib-type="author"><name><surname>van den Elsen</surname><given-names>Maarten JLJ</given-names></name><xref ref-type="aff" rid="I10">10</xref><email>m.elsen@slaz.nl</email></contrib><contrib id="A22" contrib-type="author"><name><surname>Gerhards</surname><given-names>Michael F</given-names></name><xref ref-type="aff" rid="I11">11</xref><email>M.F.Gerhards@olvg.nl</email></contrib><contrib id="A23" contrib-type="author"><name><surname>de Wit</surname><given-names>Laurens Th</given-names></name><xref ref-type="aff" rid="I11">11</xref><email>l.t.dewit@olvg.nl</email></contrib><contrib id="A24" contrib-type="author"><name><surname>Siepel</surname><given-names>Muriel AM</given-names></name><xref ref-type="aff" rid="I12">12</xref><email>M.A.M.Siepel@olvg.nl</email></contrib><contrib id="A25" contrib-type="author"><name><surname>van Geloven</surname><given-names>Anna AW</given-names></name><xref ref-type="aff" rid="I13">13</xref><email>avangeloven@ziekenhuishilversum.nl</email></contrib><contrib id="A26" contrib-type="a