<article xmlns:mml="http://www.w3.org/1998/Math/MathML" xmlns:xlink="http://www.w3.org/1999/xlink" article-type="research-article"><?properties open_access?><front><journal-meta><journal-id journal-id-type="nlm-ta">BMC Surg</journal-id><journal-id journal-id-type="iso-abbrev">BMC Surg</journal-id><journal-title-group><journal-title>BMC Surgery</journal-title></journal-title-group><issn pub-type="epub">1471-2482</issn><publisher><publisher-name>BioMed Central</publisher-name><publisher-loc>London</publisher-loc></publisher></journal-meta><article-meta><article-id pub-id-type="pmid">25972101</article-id><article-id pub-id-type="pmc">4429659</article-id><article-id pub-id-type="publisher-id">572</article-id><article-id pub-id-type="doi">10.1186/1471-2482-15-12</article-id><article-categories><subj-group subj-group-type="heading"><subject>Study Protocol</subject></subj-group></article-categories><title-group><article-title>Wound Infections Following Implant removal below the knee: the effect of antibiotic prophylaxis; the WIFI-trial, a multi-centre randomized controlled trial</article-title></title-group><contrib-group><contrib contrib-type="author" corresp="yes"><name><surname>Backes</surname><given-names>Manouk</given-names></name><address><email>m.backes@amc.nl</email></address><xref ref-type="aff" rid="Aff3"/><xref ref-type="aff" rid="Aff18"/></contrib><contrib contrib-type="author"><name><surname>Dingemans</surname><given-names>Siem A</given-names></name><address><email>s.a.dingemans@amc.nl</email></address><xref ref-type="aff" rid="Aff3"/></contrib><contrib contrib-type="author"><name><surname>Schep</surname><given-names>Niels WL</given-names></name><address><email>n.w.schep@amc.nl</email></address><xref ref-type="aff" rid="Aff3"/></contrib><contrib contrib-type="author"><name><surname>Bloemers</surname><given-names>Frank W</given-names></name><address><email>fw.bloemers@vumc.nl</email></address><xref ref-type="aff" rid="Aff4"/></contrib><contrib contrib-type="aut