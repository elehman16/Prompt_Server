<article xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:mml="http://www.w3.org/1998/Math/MathML" article-type="research-article"><?properties open_access?><front><journal-meta><journal-id journal-id-type="nlm-ta">JAMA Intern Med</journal-id><journal-id journal-id-type="iso-abbrev">JAMA Intern Med</journal-id><journal-id journal-id-type="pmc">JAMA Intern Med</journal-id><journal-title-group><journal-title>JAMA Internal Medicine</journal-title></journal-title-group><issn pub-type="ppub">2168-6106</issn><issn pub-type="epub">2168-6114</issn><publisher><publisher-name>American Medical Association</publisher-name></publisher></journal-meta><article-meta><article-id pub-id-type="pmid">29482225</article-id><article-id pub-id-type="pmc">5876922</article-id><article-id pub-id-type="doi">10.1001/jamainternmed.2017.8713</article-id><article-id pub-id-type="publisher-id">ioi170138</article-id><article-categories><subj-group subj-group-type="category" specific-use="electronic"><subject>Research</subject></subj-group><subj-group subj-group-type="domain" specific-use="print"><subject>Research</subject></subj-group><subj-group subj-group-type="heading"><subject>Original Investigation</subject></subj-group><subj-group subj-group-type="online-first"><subject>Online First</subject></subj-group></article-categories><title-group><article-title>Effectiveness of an Intervention Supporting Shared Decision Making for Destination Therapy Left Ventricular Assist Device</article-title><subtitle>The DECIDE-LVAD Randomized Clinical Trial</subtitle><alt-title alt-title-type="headline">Effectiveness of an Intervention Supporting Shared Decision Making for Destination Therapy Left Ventricular Assist Device</alt-title><alt-title alt-title-type="running-head">Effectiveness of an Intervention Supporting Shared Decision Making for Destination Therapy Left Ventricular Assist Device</alt-title></title-group><contrib-group><contrib contrib-type="author" corresp="yes"><name><surname>Allen</surname><given-names>Larry A.</given-names></name><degrees>MD</degrees><degrees>MHS</degrees><xref ref-type="aff" rid="ioi170138aff1"><sup>1</sup></xref><xref ref-type="aff" rid="ioi170138aff2"><sup>2</sup></xref></contrib><contrib contrib-type="author"><name><surname>McIlvennan</surname><given-names>Colleen K.</given-names></name><degrees>DNP</degrees><degrees>ANP</degrees><xref ref-type="aff" rid="ioi170138aff1"><sup>1</sup></xref><xref ref-type="aff" rid="ioi170138aff2"><sup>2</sup></xref></contrib><contrib contrib-type="author"><name><surname>Thompson</surname><given-names>Jocelyn S.</given-names></name><degrees>MA</degrees><xref ref-type="aff" rid="ioi170138aff1"><sup>1</sup></xref></contrib><contrib contrib-type="author"><name><surname>Dunlay</surname><given-names>Shannon M.</given-names></name><degrees>MD</degrees><degrees>MS</degrees><xref ref-type="aff" rid="ioi170138aff3"><sup>3</sup></xref></contrib><contrib contrib-type="author"><name><surname>LaRue</surname><given-names>Shane J.</given-names></name><degrees>MD</degrees><degrees>MPHS</degrees><xref ref-type="aff" rid="ioi170138aff4"><sup>4</sup></xref></contrib><contrib contrib-type="author"><name><surname>Lewis</surname><given-names>Eldrin F.</given-names></name><degrees>MD</degrees><degrees>MPH</degrees><xref ref-type="aff" rid="ioi170138aff5"><sup>5</sup></xref></contrib><contrib contrib-type="author"><name><surname>Patel</surname><given-names>Chetan B.</given-names></name><degrees>MD</degrees><xref ref-type="aff" rid="ioi170138aff6"><sup>6</sup></xref></contrib><contrib contrib-type="author"><name><surname>Blue</surname><given-names>Laura</given-names></name><degrees>DNP</degrees><degrees>ANP</degrees><xref ref-type="aff" rid="ioi170138aff6"><sup>6</sup></xref></contrib><contrib contrib-type="author"><name><surname>Fairclough</surname><given-names>Diane L.</given-names></name><degrees>PhD</degrees><xref ref-type="aff" rid="ioi170138aff1"><sup>1</sup></xref><xref ref-type="aff" rid="ioi170138aff7"><sup>7</sup></xre