ntrib><contrib id="A6" contrib-type="author"><name><surname>Hoyer</surname><given-names>Joachim</given-names></name><xref ref-type="aff" rid="I5">5</xref><email>hoyer@med.uni-marburg.de</email></contrib><contrib id="A7" contrib-type="author"><name><surname>Bramlage</surname><given-names>Peter</given-names></name><xref ref-type="aff" rid="I6">6</xref><email>peter.bramlage@mailbox.tu-dresden.de</email></contrib><contrib id="A8" contrib-type="author"><name><surname>Sturm</surname><given-names>Claus-Dieter</given-names></name><xref ref-type="aff" rid="I2">2</xref><email>Schlosser-Sturm@t-online.de</email></contrib><contrib id="A9" contrib-type="author"><name><surname>Paar</surname><given-names>W Dieter</given-names></name><xref ref-type="aff" rid="I7">7</xref><email>Dieter.Paar@sanofi-aventis.com</email></contrib></contrib-group><aff id="I1"><label>1</label>Medical Department IV, University Hospital Charit&#x000e9;, Campus Benjamin-Franklin, Berlin, Germany</aff><aff id="I2"><label>2</label>St. Joseph's Hospital and INFO GmbH Institute for Hypertension and Cardiovascular Research, Cloppenburg, Germany</aff><aff id="I3"><label>3</label>Diabetes Center, Quakenbr&#x000fc;ck, Germany</aff><aff id="I4"><label>4</label>Department for Internal Medicine, St. Joseph's Hospital, Heidelberg, Germany</aff><aff id="I5"><label>5</label>Clinic for Internal Medicine, Nephrology, Marburg, Germany</aff><aff id="I6"><label>6</label>Institute for Clinical Pharmacology, Medical Faculty Carl Gustav Carus, TU Dresden, Germany</aff><aff id="I7"><label>7</label>Medical Department, Sanofi-Aventis Germany, Berlin, Germany</aff><pub-date pub-type="collection"><year>2008</year></pub-date><pub-date pub-type="epub"><day>24</day><month>7</month><year>2008</year></pub-date><volume>7</volume><fpage>22</fpage><lpage>22</lpage><ext-link ext-link-type="uri" xlink:href="http://www.cardiab.com/content/7/1/22"/><history><date date-type="received"><day>1</day><month>7</month><year>2008</year></date><date date-type="accepted"><day>24</day><month>7</month><year>2008</year></date></history><permissions><copyright-statement>Copyright &#x000a9; 2008 Zidek et al; licensee BioMed Central Ltd.</copyright-statement><copyright-year>2008</copyright-year><copyright-holder>Zidek et al; licensee BioMed Central Ltd.</copyright-holder><license license-type="open-access" xlink:href="http://creativecommons.org/licenses/by/2.0"><p>This is an Open Access article distributed under the terms of the Creative Commons Attribution License (<ext-link ext-link-type="uri" xlink:href="http://creativecommons.org/licenses/by/2.0"/>), which permits unrestricted use, distribution, and reproduction in any medium, provided the original work is properly cited.</p><!--<rdf xmlns="http://web.resource.org/cc/" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:dc="http://purl.org/dc/elements/1.1" xmlns:dcterms="http://purl.org/dc/terms"><Work xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:dcterms="http://purl.org/dc/terms/" rdf:about=""><license rdf:resource="http://creativecommons.org/licenses/by/2.0"/><dc:type rdf:resource="http://purl.org/dc/dcmitype/Text"/><dc:author>
