<article xmlns:mml="http://www.w3.org/1998/Math/MathML" xmlns:xlink="http://www.w3.org/1999/xlink" article-type="research-article"><?properties open_access?><front><journal-meta><journal-id journal-id-type="nlm-ta">Trials</journal-id><journal-id journal-id-type="iso-abbrev">Trials</journal-id><journal-title-group><journal-title>Trials</journal-title></journal-title-group><issn pub-type="epub">1745-6215</issn><publisher><publisher-name>BioMed Central</publisher-name><publisher-loc>London</publisher-loc></publisher></journal-meta><article-meta><article-id pub-id-type="pmid">25902813</article-id><article-id pub-id-type="pmc">4407416</article-id><article-id pub-id-type="publisher-id">718</article-id><article-id pub-id-type="doi">10.1186/s13063-015-0718-x</article-id><article-categories><subj-group subj-group-type="heading"><subject>Study Protocol</subject></subj-group></article-categories><title-group><article-title>Comparison of two strategies for initiating renal replacement therapy in the intensive care unit: study protocol for a randomized controlled trial (AKIKI)</article-title></title-group><contrib-group><contrib contrib-type="author"><name><surname>Gaudry</surname><given-names>St&#x000e9;phane</given-names></name><address><email>stephanegaudry@gmail.com</email></address><xref ref-type="aff" rid="Aff1"/><xref ref-type="aff" rid="Aff2"/><xref ref-type="aff" rid="Aff3"/></contrib><contrib contrib-type="author" equal-contrib="yes"><name><surname>Hajage</surname><given-names>David</given-names></name><address><email>david.hajage@lmr.aphp.fr</email></address><xref ref-type="aff" rid="Aff4"/><xref ref-type="aff" rid="Aff5"/><xref ref-type="aff" rid="Aff6"/></contrib><contrib contrib-type="author" equal-contrib="yes"><name><surname>Schortgen</surname><given-names>Fr&#x000e9;derique</given-names></name><address><email>frederique.schortgen@hmn.aphp.fr</email></address><xref ref-type="aff" rid="Aff24"/></contrib><contrib contrib-type="author"><name><surname>Martin-Lefevre</surname><given-names>Laurent</given-names></name><address><email>laurent.martin-lefevre@chd-vendee.fr</email></address><xref ref-type="aff" rid="Aff7"/></contrib><contrib contrib-type="author"><name><surname>Tubach</surname><given-names>Florence</given-names></name><address><email>florence.tubach@bch.aphp.fr</email></address><xref ref-type="aff" rid="Aff4"/><xref ref-type="aff" rid="Aff6"/><xref ref-type="aff" rid="Aff8"/></contrib><contrib contrib-type="author"><name><surname>Pons</surname><given-names>Bertrand</given-names></name><address><email>bertrand.pons@chu-guadeloupe.fr</email></address><xref ref-type="aff" rid="Aff9"/></contrib><contrib contrib-type="author"><name><surname>Boulet</surname><given-names>Eric</given-names></name><address><email>eric.boulet@ch-pontoise.fr</email></address><xref ref-type="aff" rid="Aff10"/></contrib><contrib contrib-type="author"><name><surname>Boyer</surname><given-names>Alexandre</given-names></name><address><email>alexandre.boyer@chu-bordeaux.fr</email></address><xref ref-type="aff" rid="Aff11"/></contrib><contrib contrib-type="author"><name><surname>Lerolle</surname><given-names>Nicolas</given-names></name><address><email>nilerolle@chu-angers.fr</email></address><xref ref-type="aff" rid="Aff12"/></contrib><contrib contrib-type="author"><name><surname>Chevrel</surname><given-names>Guillaume</given-names></name><address><email>guillaume.chevrel@ch-sud-francilien.fr</email></address><xref ref-type="aff" rid="Aff13"/></contrib><contrib contrib-type="author"><name><surname>Carpentier</surname><given-names>Doroth&#x000e9;e</given-names></name><address><email>dorothee.carpentier@chu-rouen.fr</email></address><xref ref-type="aff" rid="Aff14"/></contrib><contrib contrib-type="author"><name><surname>Lautrette</surname><given-names>Alexandre</given-names></name><address><email>alautrette@chu-clermontferrand.fr</email></address><xref ref-type="aff" rid="Aff15"/></contrib><contrib contrib-type="author"><name><surname>Bretagnol</surname><given-names>Anne</given-names></name><address><email>anne.bretagnol@chr-orleans.fr</email></address><xref ref-type="aff" rid="Aff16"/></contrib><contrib contrib-type="author"><name><surname>Mayaux</surname><given-names>Julien</given-names></name><address><email>julien.mayaux@psl.aphp.fr</email></address><xref ref-type="aff" rid="Aff17"/></contrib><contrib contrib-type="author"><name><surname>Thirion</surname><given-names>Marina</given-names></name><address><email>marina.thirion@ch-argenteuil.fr</email></address><xref ref-type="aff" rid="Aff18"/></contrib><contrib contrib-type="author"><name><surname>Markowicz</surname><given-names>Philippe</given-names></name><address><email>philippe.markowicz@ch-cholet.fr</email></address><xref ref-type="aff" rid="Aff19"/></contrib><contrib contrib-type="author"><name><surname>Thomas</surname><given-names>Guillemette</given-names></name><address><email>guillemette.thomas@ap-hm.fr</email></address><xref ref-type="aff" rid="Aff20"/></contrib><contrib contrib-type="author"><name><surname>Dellamonica</surname><given-names>Jean</given-names></name><address><email>dellamonica.j@chu-nice.fr</email></address><xref ref-type="aff" rid="Aff21"/></contrib><contrib contrib-type="author"><name><surname>Richecoeur</surname><given-names>Jack</given-names></name><address><email>j.richecoeur@ch-beauvais.fr</email></address><xref ref-type="aff" rid="Aff22"/></contrib><contrib contrib-type="author"><name><surname>Darmon</surname><given-names>Michael</given-names></name><address><email>michael.darmon@chu-st-etienne.fr</email></address><xref ref-type="aff" rid="Aff23"/></contrib><contrib contrib-type="author"><name><surname>de Prost</surname><given-names>Nicolas</given-names></name><address><email>nicolas.de-prost@hmn.aphp.fr</email></address><xref ref-type="aff" rid="Aff24"/><xref ref-type="aff" rid="Aff25"/></contrib><contrib contrib-type="author"><name><surname>Yonis</surname><given-names>Hodane</given-names></name><address><email>hodane.yonis@chu-