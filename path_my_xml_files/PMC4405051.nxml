<article xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:mml="http://www.w3.org/1998/Math/MathML" article-type="research-article"><?properties open_access?><front><journal-meta><journal-id journal-id-type="nlm-ta">Acad Emerg Med</journal-id><journal-id journal-id-type="iso-abbrev">Acad Emerg Med</journal-id><journal-id journal-id-type="publisher-id">acem</journal-id><journal-title-group><journal-title>Academic Emergency Medicine</journal-title></journal-title-group><issn pub-type="ppub">1069-6563</issn><issn pub-type="epub">1553-2712</issn><publisher><publisher-name>BlackWell Publishing Ltd</publisher-name><publisher-loc>Oxford, UK</publisher-loc></publisher></journal-meta><article-meta><article-id pub-id-type="pmid">25716463</article-id><article-id pub-id-type="pmc">4405051</article-id><article-id pub-id-type="doi">10.1111/acem.12615</article-id><article-categories><subj-group subj-group-type="heading"><subject>Original Contributions</subject></subj-group></article-categories><title-group><article-title>Treatment of Pulmonary Embolism With Rivaroxaban: Outcomes by Simplified Pulmonary Embolism Severity Index Score from a Post Hoc Analysis of the EINSTEIN PE Study</article-title></title-group><contrib-group><contrib contrib-type="author"><name><surname>Fermann</surname><given-names>Gregory J</given-names></name><degrees>MD</degrees><xref ref-type="aff" rid="au1">1</xref><xref ref-type="corresp" rid="cor1"/></contrib><contrib contrib-type="author"><name><surname>Erkens</surname><given-names>Petra M G</given-names></name><degrees>PhD</degrees><xref ref-type="aff" rid="au2">2</xref></contrib><contrib contrib-type="author"><name><surname>Prins</surname><given-names>Martin H</given-names></name><degrees>MD</degrees><xref ref-type="aff" rid="au3">3</xref></contrib><contrib contrib-type="author"><name><surname>Wells</surname><given-names>Philip S</given-names></name><degrees>MD</degrees><xref ref-type="aff" rid="au4">4</xref></contrib><contrib contrib-type="author"><name><surname>Pap</surname><given-names>&#x000c1;kos F</given-names></name><degrees>MSc</degrees><xref ref-type="aff" rid="au5">5</xref></contrib><contrib contrib-type="author"><name><surname>Lensing</surname><given-names>Anthonie W A</given-names></name><degrees>MD</degrees><xref ref-type="aff" rid="au5">5</xref></contrib><contrib contrib-type="author"><name><surname>Kline</surname><given-names>Jeffrey</given-names></name><degrees>MD</degrees></contrib><aff id="au1"><label>1</label><institution>Department of Emergency Medicine, University of Cincinnati</institution><addr-line>Cincinnati, OH</addr-line></aff><aff id="au2"><label>2</label><institution>School for Public Health and Primary Care</institution><addr-line>Maastricht, The Netherlands</addr-line></aff><aff id="au3"><label>3</label><institution>Maastricht University Medical Centre</institution><addr-line>Maastricht, The Netherlands</addr-line></aff><aff id="au4"><label>4</label><institution>Department of Medicine, University of Ottawa</institution><addr-line>Ottawa, Ontario, Canada</addr-line></aff><aff id="au5"><label>5</label><institution>Bayer HealthCare</institution><addr-line>Wuppertal, Germany</addr-line></aff></contrib-group><author-notes><corresp id="cor1">
