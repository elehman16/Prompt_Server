><xref ref-type="aff" rid="af1">1</xref><xref ref-type="aff" rid="af2">2</xref></contrib><contrib contrib-type="author"><name><surname>Moore</surname><given-names>Laura J</given-names></name><xref ref-type="aff" rid="af1">1</xref><xref ref-type="aff" rid="af2">2</xref></contrib><contrib contrib-type="author"><name><surname>Cotton</surname><given-names>Bryan A</given-names></name><xref ref-type="aff" rid="af1">1</xref><xref ref-type="aff" rid="af2">2</xref></contrib><contrib contrib-type="author"><name><surname>Wade</surname><given-names>Charles E</given-names></name><xref ref-type="aff" rid="af2">2</xref></contrib><contrib contrib-type="author"><name><surname>Holcomb</surname><given-names>John B</given-names></name><xref ref-type="aff" rid="af1">1</xref><xref ref-type="aff" rid="af2">2</xref></contrib></contrib-group><aff id="af1"><label>1</label><addr-line>Department of Surgery</addr-line>, <institution>McGovern Medical School, The University of Texas Health Science Center at Houston</institution>, <addr-line>Houston, Texas</addr-line>, <country>USA</country>
