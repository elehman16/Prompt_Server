<article xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:mml="http://www.w3.org/1998/Math/MathML" article-type="research-article"><?properties open_access?><front><journal-meta><journal-id journal-id-type="nlm-ta">Trials</journal-id><journal-title-group><journal-title>Trials</journal-title></journal-title-group><issn pub-type="epub">1745-6215</issn><publisher><publisher-name>BioMed Central</publisher-name></publisher></journal-meta><article-meta><article-id pub-id-type="pmid">21349192</article-id><article-id pub-id-type="pmc">3056809</article-id><article-id pub-id-type="publisher-id">1745-6215-12-53</article-id><article-id pub-id-type="doi">10.1186/1745-6215-12-53</article-id><article-categories><subj-group subj-group-type="heading"><subject>Study Protocol</subject></subj-group></article-categories><title-group><article-title>A comparison between diuretics and angiotensin-receptor blocker agents in patients with stage I hypertension (PREVER-treatment trial): study protocol for a randomized double-blind controlled trial</article-title></title-group><contrib-group><contrib contrib-type="author" corresp="yes" id="A1"><name><surname>Fuchs</surname><given-names>Fl&#x000e1;vio D</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>ffuchs@hcpa.ufrgs.br</email></contrib><contrib contrib-type="author" id="A2"><name><surname>Fuchs</surname><given-names>Sandra C</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>scfuchs@terra.com.br</email></contrib><contrib contrib-type="author" id="A3"><name><surname>Moreira</surname><given-names>Leila B</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>lbmoreira@hcpa.ufrgs.br</email></contrib><contrib contrib-type="author" id="A4"><name><surname>Gus</surname><given-names>Miguel</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>mgus@terra.com.br</email></contrib><contrib contrib-type="author" id="A5"><name><surname>N&#x000f3;brega</surname><given-names>Ant&#x000f4;nio C</given-names></